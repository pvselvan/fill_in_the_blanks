<%= form_for @post do |f| %>

	<% if @post.errors.any? %>
		<h2>
			<%= pluralize(@post.errors.count, "error") %>
			prohibited this post from being saved
		</h2>
		<ul>
			<% @post.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
	<% end %>

	<p>
		<%= f.label :bru_name %><br>
		<%= f.text_field :bru_name %>
	</p>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_field :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>